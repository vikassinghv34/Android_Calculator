<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:gravity="right"
            android:id="@+id/tv"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:id="@+id/edttxt"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn1"
        android:layout_weight="1"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn2"
        android:layout_weight="1"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn3"
        android:layout_weight="1"
        ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnadd"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn4"
        android:layout_weight="1"
        ></Button>


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn5"
        android:layout_weight="1"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn6"
        android:layout_weight="1"
        ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnsub"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn7"
        android:layout_weight="1"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn8"
        android:layout_weight="1"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btn9"
        android:layout_weight="1"
        ></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="x"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnmul"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="."
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btndot"
            android:layout_weight="1"
            ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnzero"
            android:layout_weight="1"
            ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="%"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnpercentage"
            android:layout_weight="1"
            ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btndiv"
        android:layout_weight="1"
        ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:text="C"
            android:textSize="30dp"
            android:layout_weight="1.5"
            android:id="@+id/btnclear"
            ></Button>


        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="&lt;-"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/btnoneback"
            android:layout_weight="1.5"
            ></Button>


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="="
        android:textSize="30dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/btntotal"
        android:layout_weight="1"
        ></Button>

    </LinearLayout>

</LinearLayout>